<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/layout_event_inList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/layout_eventFirstRow_inList"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:id="@+id/layout_eventName_inList"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <TextView
                    android:id="@+id/members_TextRV"
                    android:layout_width="267dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="6dp"
                    android:textAppearance="?attr/textAppearanceListItem"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/eventCategory_ImageId"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="Пойти погулять в Парке Горького и поесть" />

                <Button
                    android:id="@+id/buttonAccept"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="15dp"

                    android:visibility="visible"
                    app:icon="@drawable/quantum_ic_arrow_back_grey600_24"
                    app:iconTint="#0AF114" />

                <Button
                    android:id="@+id/buttonDeni"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_width="45dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="15dp"

                    android:visibility="visible"
                    app:icon="@drawable/quantum_ic_clear_grey600_24"
                    app:iconTint="#FF0000" />

            </LinearLayout>

        </LinearLayout>




    </LinearLayout>

    <View
        android:id="@+id/dividerToAccept"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#836F7275"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
